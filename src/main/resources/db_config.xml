<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <entry key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</entry>
    <entry key="hibernate.connection.driver_class">com.mysql.jdbc.Driver</entry>
    <entry key="hibernate.connection.url">jdbc:mysql://localhost:3306/test_db?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC</entry>
    <entry key="hibernate.connection.username">username</entry>
    <entry key="hibernate.connection.password">password</entry>
    <entry key="hibernate.show_sql">true</entry>
    <entry key="hibernate.hbm2ddl.auto">create</entry>
</properties>